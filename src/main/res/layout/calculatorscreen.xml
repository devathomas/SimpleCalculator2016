<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.devat.simplecalculator2016.MainActivity">


    <GridLayout
        android:id="@+id/gridLayoutCalculator"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            style="@style/CalculatorButton"
            android:background="@color/colorAccent"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="30sp"
            android:paddingBottom="30sp"
            android:id="@+id/textViewOutputScreen"
            android:textSize="30sp"
            android:layout_column="0"
            android:layout_columnSpan="4"

            android:layout_columnWeight="2"
            android:layout_gravity="right"
            android:layout_width="351dp"
            android:layout_height="109dp" />

        <Button
            style="@style/CustomButton"
            android:text="C"
            android:id="@+id/buttonKeyC"
            android:layout_row="1"
            android:layout_column="0"

                        />

        <Button
            style="@style/CustomButton"
            android:text="^"
            android:id="@+id/buttonKeyExp"
            android:layout_row="5"
            android:layout_column="1" />

        <Button
            style="@style/CustomButton"
            android:text="/"
            android:id="@+id/buttonKeyDivide"
            android:layout_row="1"
            android:layout_column="3"

                        />

        <Button
            style="@style/CustomButton"
            android:text="7"
            android:id="@+id/buttonKey7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            style="@style/CustomButton"
            android:text="8"
            android:id="@+id/buttonKey8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            style="@style/CustomButton"
            android:text="9"
            android:id="@+id/buttonKey9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            style="@style/CustomButton"
            android:text="*"
            android:id="@+id/buttonKeyMultiply"
            android:layout_row="2"
            android:layout_column="3"
             />

        <Button
            style="@style/CustomButton"
            android:text="4"
            android:id="@+id/buttonKey4"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            style="@style/CustomButton"
            android:text="5"
            android:id="@+id/buttonKey5"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            style="@style/CustomButton"
            android:text="6"
            android:id="@+id/buttonKey6"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            style="@style/CustomButton"
            android:text=" - "
            android:id="@+id/buttonKeySubtract"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            style="@style/CustomButton"
            android:text="1"
            android:id="@+id/buttonKey1"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            style="@style/CustomButton"
            android:text="2"
            android:id="@+id/buttonKey2"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            style="@style/CustomButton"
            android:text="3"
            android:id="@+id/buttonKey3"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            style="@style/CustomButton"
            android:text="+"
            android:id="@+id/buttonKeyAdd"
            android:layout_row="4"
            android:layout_column="3" />

        <Button
            style="@style/CustomButton"
            android:text="0"
            android:id="@+id/buttonKey0"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="1" />

        <Button
            style="@style/CustomButton"
            android:text="("
            android:id="@+id/buttonKeyParenthesis"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="1" />

        <Button
            style="@style/CustomButton"
            android:text=")"
            android:id="@+id/buttonKeyParenthesisClose"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="1" />

        <Button
            style="@style/CustomButton"
            android:text="="
            android:id="@+id/buttonKeyEquals"
            android:layout_row="5"
            android:layout_column="3" />

        <Button
            style="@style/CustomButton"
            android:text="."
            android:id="@+id/buttonKeyDecimal"
            android:layout_row="5"
            android:layout_column="2" />


    </GridLayout>


</RelativeLayout>
